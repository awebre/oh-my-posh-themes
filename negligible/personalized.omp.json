{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#9ea7b3",
          "style": "powerline",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}",
          "type": "os"
        },
        {
          "foreground": "#fbe59e",
          "properties": {
            "style": "agnoster"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#F1502F",
          "properties": {
            "fetch_status": true
          },
          "style": "plain",
          "template": ":: {{ .HEAD }}{{ .BranchStatus }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#e82a2f",
          "style": "plain",
          "template": "| root ",
          "type": "root"
        },
        {
          "foreground": "#acf7b6",
          "style": "powerline",
          "template": "|{{ if .PackageManagerIcon }}{{ .PackageManagerIcon }}{{ else }}\ue718{{ end }} {{ .Full }} ",
          "type": "node",
          "properties": {
            "fetch_package_manager": true
          }
        },
        {
          "foreground": "#cb9eff",
          "type": "dotnet",
          "style": "plain",
          "template": "| \ue70c {{ if .Unsupported }}\uf071{{ else }}{{ .Full }}{{ end }} "
        },
        {
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}#26cd4d{{end}}",
            "{{if eq \"Discharging\" .State.String}}#f0b72f{{end}}",
            "{{if eq \"Full\" .State.String}}#9ea7b3{{end}}"
          ],
          "invert_powerline": true,
          "properties": {
            "charged_icon": "\uf578 ",
            "charging_icon": "\uf583 ",
            "discharging_icon": "\uf57d "
          },
          "style": "powerline",
          "template": "| {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }} \uf295 ",
          "type": "battery"
        },
        {
          "foreground": "#71b7ff",
          "style": "plain",
          "template": "| {{ .CurrentDate | date .Format }} ",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#71b7ff",
          "foreground_templates": ["{{ if gt .Code 0 }}red{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "powerline",
          "template": "\u279c ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
